# Application Settings
APP_NAME=Audio Streaming Bridge
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Database
DATABASE_URL=sqlite+aiosqlite:///./audio_bridge.db

# Asterisk ARI Configuration
ASTERISK_HOST=localhost
ASTERISK_PORT=8088
ASTERISK_USERNAME=asterisk
ASTERISK_PASSWORD=your_ari_password_here
ASTERISK_WS_URL=ws://localhost:8088/ari/events

# Audio Processing
AUDIO_CHUNK_SIZE=4096
AUDIO_SAMPLE_RATE=8000
AUDIO_CHANNELS=1
AUDIO_FORMAT=PCM

# WebSocket
WS_MAX_CONNECTIONS=2000
WS_HEARTBEAT_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_AUDIO_STREAMS=true

# Storage
AUDIO_STORAGE_PATH=./audio_storage
